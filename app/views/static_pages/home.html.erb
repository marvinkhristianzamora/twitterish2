<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %> </section>
    </aside>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Twitterish 2</h1>
     <h2>
      Home of yet another attempt at ruby on rails. A twitter-like micropost manager from the
      <a href="http://railstutorials.org/">Ruby on Rails Tutorial</a>
    </h2>

    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag('logo_small.jpg', alt: "Twitterish2"), '#' %>
<% end %>
